WindowManager:
	FirstWindow:
	SecondWindow:
	ThirdWindow:
	FourthWindow:
	FifthWindow:
	SixthWindow:
	SeventhWindow:



<FirstWindow>:
	name: "first"

	BoxLayout:
		size_hint_x: 0.5
        size_hint_y: None
        height: 200

        orientation: 'vertical'
        pos_hint: {'center_x': 0.5,'center_y':0.5}

        minimum_height: 100
        minimum_width: 100

		Label:
			text: "Correo electrónico: "
			font_size: 20
            size_hint_x: None

		TextInput:
            multiline: False
            font_size: 20

        Label:
            text:"Contraseña: "
            font_size: 20
            size_hint_x: None

        TextInput:
            multiline: False
            password: True
            font_size: 20


		Button:
			text: "Log in"
			on_release:
				app.root.current = "second"
				root.manager.transition.direction = "left"


<SecondWindow>:
	name: "second"

	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		Label:
			text: "Bienvenid@ a BlinkyMove"
			font_size: 32

		Button:
			text: "Frases"
			font_size: 18
			on_release:
				app.root.current = "third"
				root.manager.transition.direction = "left"

	    Button:
			text: "Teclado"
			font_size: 18
			on_release:
				app.root.current = "fourth"
				root.manager.transition.direction = "left"


		Button:
			text: "Perfil"
			font_size: 18
			on_release:
				app.root.current = "fifth"
				root.manager.transition.direction = "left"

		Button:
			text: "Ajustes"
			font_size: 18
			on_release:
				app.root.current = "seventh"
				root.manager.transition.direction = "left"

		Button:
			text: "Cerrar sesión"
			font_size: 32
			on_release:
				app.root.current = "first"
				root.manager.transition.direction = "right"


<ThirdWindow>:
	name: "third"

	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		Label:
			text: "Configura tus frases"
			font_size: 32

		Button:
			text: "Regresar"
			font_size: 15
			on_release:
				app.root.current = "second"
				root.manager.transition.direction = "right"


<FourthWindow>:
	name: "fourth"

	GridLayout:
		cols: 1

		Label:
			text: "Tecla seleccionada: "
			font_size: 20


		Button:
			text: "Regresar"
			font_size: 32
			on_release:
				app.root.current = "second"
				root.manager.transition.direction = "right"

<FifthWindow>:
	name: "fifth"

	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		Label:
			text: "Perfil"
			font_size: 32

		Button:
			text: "Regresar"
			font_size: 32
			on_release:
				app.root.current = "second"
				root.manager.transition.direction = "right"
<SixthWindow>:
	name: "sixth"

	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		Label:
			text: "Teclado"
			font_size: 32

		Button:
			text: "Regresar"
			font_size: 32
			on_release:
				app.root.current = "second"
				root.manager.transition.direction = "right"

<SeventhWindow>:
	name: "seventh"

	BoxLayout:
	    orientation: "vertical"
		size: root.width, root.height
		size_hint_y: None
        height: '48dp'

		Label:
			text: "Ajustes"
			font_size: 32

        Label:
            text: "Notificaciones"

        Label:
            text: "Información personal"

        Label:
            text: "Cambiar contraseña"

        Label:
            text: "Copia de seguridad"

        Label:
            text: "Conectar dispositivo"
        Switch:
            active: True

        Label:
            text: "Obtener ayuda"

        Label:
            text: "Términos y condiciones"

		Button:
			text: "Regresar"
			font_size: 30
			on_release:
				app.root.current = "second"
				root.manager.transition.direction = "right"
